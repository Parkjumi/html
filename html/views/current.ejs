        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">장학</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">연수</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">대회</a></li>
      </ul>
    </div>
    <div class="input-group" id="input2">
      <input id="search" style="width: 280px;" type="text" class="form-control" placeholder="검색어를 입력해주세요">
      <span class="input-group-btn" style="background-color:#4331A9">
        <button class="btn" type="button">검색</button>
      </span>
    </div><!-- /input-group -->
  </div>

  <table frame=void border="1" id="posters">
    <tbody>
      <tr class="tr" id="click">
        <%
          var arr = new Array();
         for(var i = 0;i < data.length;i++)
         {
            var item = data[i];
            arr[i] = i;
            console.log(arr[i]);
          %>
          <td class="poster">
            <div class="origin">
                <div class="poster_name">
                  <img class="person_icon" src="design/person icon.png">
                  <span style="color:white;font-size:11px;"><%= item.title %></span>
                </div>
                <img class="poster_img" src="<%= item.img %>">
                <div class="info">
                  <p class="contents" style="font-size:14px;">
                    <%= item.person %>
                  </p>
                  <span class="category" style="font-size:12px;">
                    <%= item.category %>
                  </span>
                  <p class="date" style="font-size:14px;margin-top:5px;">
                    <%= item.date %>
                  </p>
                </div>
                <div class="tail">
                  빈 공간
                </div>
              </div>
              <div class="change">
                <img class="img" src="design/icon.png">
                <img class="img" src="design/chart.png">
                <a href="/detail/<%= arr[i] %>"><img class="img" src="design/mark.png"></a>
              </div>
          </td>
        <% } %>
      </tr>
    </tbody>
  </table>

